#!/bin/bash
{% from "letsencrypt/map.jinja" import letsencrypt with context %}
{%- if salt['pillar.get']('letsencrypt:use_package', '') == true %}
  {%- set letsencrypt_command = "letsencrypt" %}
{%- else %}
  {%- set letsencrypt_command = letsencrypt.cli_install_dir + "/letsencrypt-auto" %}
{%- endif %}
COMMON_NAME="$1"

JOINED=""
for DOMAIN in "$@"
do
    JOINED+=" -d $DOMAIN"
done

if ! /usr/local/bin/check_letsencrypt_cert.sh "$@" > /dev/null
then
    {{ letsencrypt_command }} certonly $JOINED --non-interactive || exit 1
    cat /etc/letsencrypt/live/${COMMON_NAME}/fullchain.pem \
        /etc/letsencrypt/live/${COMMON_NAME}/privkey.pem \
        > /etc/letsencrypt/live/${COMMON_NAME}/fullchain-privkey.pem || exit 1
    chmod 600 /etc/letsencrypt/live/${COMMON_NAME}/fullchain-privkey.pem || exit 1
fi
